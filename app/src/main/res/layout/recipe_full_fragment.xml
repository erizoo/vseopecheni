<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="30dp">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rl_recipe_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="30dp">

                <TextView
                    android:id="@+id/title_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="30dp"
                    android:layout_marginStart="90dp"
                    android:layout_marginTop="30dp"
                    android:textColor="#0080b2"
                    android:textSize="21sp" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="30dp"
                    app:srcCompat="@drawable/ic_1" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/full_recipe_imageView"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:layout_below="@+id/rl_recipe_layout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp" />

            <TextView
                android:id="@+id/composition_recipe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/full_recipe_imageView"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:textColor="#9a9a9a"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/cooking_method"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/composition_recipe"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:text="Способ приготовления:"
                android:textColor="#9a9a9a"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cooking_method_full"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cooking_method"
                android:layout_marginStart="30dp"
                android:layout_marginTop="5dp"
                android:textColor="#9a9a9a"
                android:textSize="14sp" />

        </RelativeLayout>

    </ScrollView>


</android.support.constraint.ConstraintLayout>